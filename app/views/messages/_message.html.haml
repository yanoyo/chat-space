.chat-main__message
  .chat-main__message-name
    = message.user.name
  .chat-main__message-time
    = message.created_at.strftime("%Y/%m/%d %H:%M")
  - if message.content.present?
    .chat-main__message-content
      = message.content
  = image_tag message.image.url, class: 'chat-main__message-image' if message.image.present?
