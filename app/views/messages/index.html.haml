= render 'shared/chatside'

//右側
.chat-main
  .chat-main__header
    .chat-main__header--group
      %h2.chat-main__header--group-name
        = @group.name
      %p.chat-main__header--group-members
        Members:
        - @group.users.each do |user|
          = user.name

    .btn-edit
      = link_to 'Edit', edit_group_path(@group), class: 'btn'

  .chat-main__content
    .chat-main__list
      = render 'shared/chatmain'

  .chat-main__footer
    %form.footer__form
      %input.message{type: "text", placeholder: "type a message"}
      %label{for: "message-image"}
        %input.image{type: "file", accept: "image/*", id: "message-image"}
        %i.fa.fa-picture-o
      %input.submit{type: "submit", value: "Send"}
